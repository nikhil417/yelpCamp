<% layout("layouts/boilerplate") %>
<h1>All Campgrounds</h1>
<div>Create new campground <a href="/campground/new">here</a></div>
<% for (let camp of camps) {%>
<div class="row">
  <div class="col-md-4">
    <img class="img-fluid" src="<%= camp.image %>" alt="" />
  </div>
  <div class="col-md-8">
    <div class="card-body">
      <h5 class="card-title"><%= camp.title %></h5>
      <p class="card-text"><%= camp.description %></p>
      <p class="card-text">
        <small class="text-muted"><%= camp.location %></small>
      </p>
      <a class="btn btn-primary" href="/campground/<%= camp.id %>">View</a>
    </div>
  </div>
</div>
<% } %>
